case "$1" in
    configure)
	    for i in plugin-sysauthldap-secrets.inc ; do
		if [ -e @CONFIG_PATH@/httpd.conf.d/$i ] ; then
		    sed -i -e s,@SOURCE_PATH@/src,@SOURCE_PATH@,g @CONFIG_PATH@/httpd.conf.d/$i
		else
		    cp @SOURCE_PATH@/etc/httpd.conf.d-fhs/$i @CONFIG_PATH@/httpd.conf.d/$i
		    case $i in
			*secrets*)
			    chmod 600 @CONFIG_PATH@/httpd.conf.d/$i
			    ;;
		    esac
		fi
		if grep -q {[a-z_]*/[a-z_]*} @CONFIG_PATH@/httpd.conf.d/$i ; then
		    PATH=@BINARY_PATH@:$PATH manage-apache-config.sh install $i
		    mv @CONFIG_PATH@/httpd.conf.d/$i.generated @CONFIG_PATH@/httpd.conf.d/$i
		fi
	    done
	;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
	;;
esac
