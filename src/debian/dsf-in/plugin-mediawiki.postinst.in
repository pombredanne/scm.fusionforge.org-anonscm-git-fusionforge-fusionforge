upgrade_mediawikis () {
    # Upgrade Mediawiki database schemas
    $(forge_get_config binary_path)/list-projects-using-plugin.php mediawiki | while read i ; do
	$(forge_get_config plugins_path)/mediawiki/bin/mw-wrapper.php $i update.php --quick
    done
}

# Accomodate wikidata path change
move_mediawikis() {
	local a b found

	# Determine whether there are any wikis to move
	found=0
	for a in $(forge_get_config data_path)/plugins/mediawiki/wikidata/*; do
		test -d "$a/." || continue
		found=1
		break
	done
	test $found = 1 || {
		rmdir $(forge_get_config data_path)/plugins/mediawiki/wikidata || \
		    echo >&2 "WARNING: Could not delete $(forge_get_config data_path)/plugins/mediawiki/wikidata"
		return 0
	}

	# Move wikis
	(
		cd $(forge_get_config data_path)/plugins/mediawiki/wikidata
		for a in *; do
			test -d "$a/." || {
				echo >&2 "WARNING: Non-directory $(forge_get_config data_path)/plugins/mediawiki/wikidata/$a not migrated!"
				continue
			}
			# Conflict?
			b=../projects/$a
			if test -e "$b"; then
				b=$(mktemp "$(forge_get_config data_path)/plugins/mediawiki/projects/$a-olddata-XXXXXXXXXX") || {
					echo >&2 "Could not create temporary file."
					exit 1
				}
				rm -f "$b"
			fi
			# Move.
			mv "$a" "$b" || \
			    echo >&2 "WARNING: Could not move away $(forge_get_config data_path)/plugins/mediawiki/wikidata/$a, investigate manually!"
		done
	)

	# Look again for remnants
	found=0
	for a in $(forge_get_config data_path)/plugins/mediawiki/wikidata/*; do
		test -e "$a" || continue
		echo >&2 "WARNING: Non-moved files in $(forge_get_config data_path)/plugins/mediawiki/wikidata/ exist. Investigate manually!"
		found=1
		break
	done
	test $found = 1 || \
	    rmdir $(forge_get_config data_path)/plugins/mediawiki/wikidata || \
	    echo >&2 "Could not delete empty $(forge_get_config data_path)/plugins/mediawiki/wikidata"
	return 0
}

case "$1" in
    triggered)
	case $2 in
	/usr/share/mediawiki*) upgrade_mediawikis ;;
	esac
	;;
    
    configure)
	# Data path changed
	test -d $(forge_get_config data_path)/plugins/mediawiki/wikidata/. && \
	    test -d $(forge_get_config data_path)/plugins/mediawiki/projects/. && \
	    move_mediawikis

	# Don't upgrade mediawikis at each update (long)
	# Update them using Debian MediaWiki triggers instead.
	#upgrade_mediawikis
	;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
	;;
esac
